{
  "name": "@akaoio/builder",
  "version": "1.0.1",
  "description": "Universal TypeScript build framework for the @akaoio ecosystem",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "akao-build": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "test": "bun test/index.ts",
    "test:watch": "bun --watch test/index.ts",
    "lint": "tsc --noEmit",
    "docs:build": "npx @akaoio/composer build",
    "docs:watch": "npx @akaoio/composer watch",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test && npm run docs:build"
  },
  "keywords": [
    "build",
    "typescript",
    "bundler",
    "tsup",
    "esbuild",
    "builder",
    "akaoio"
  ],
  "author": "akaoio",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akaoio/builder.git"
  },
  "bugs": {
    "url": "https://github.com/akaoio/builder/issues"
  },
  "homepage": "https://github.com/akaoio/builder#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "esbuild": "^0.24.2",
    "globby": "^14.0.2",
    "picocolors": "^1.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@akaoio/battle": "^1.1.0",
    "@akaoio/composer": "^0.2.3",
    "@types/node": "^22.10.6",
    "node-pty": "^1.0.0",
    "tsx": "^4.20.4"
  }
}
