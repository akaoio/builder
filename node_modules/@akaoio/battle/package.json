{
  "name": "@akaoio/battle",
  "version": "1.1.0",
  "description": "Universal terminal application testing framework with real PTY emulation and screenshots",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "battle": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --clean",
    "build:watch": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "dev": "tsx src/cli.ts",
    "test": "npm run build && tsx test/index.test.ts",
    "test:battle": "npm run build && tsx test/Battle/index.test.ts",
    "test:replay": "npm run build && tsx test/Replay/index.test.ts",
    "test:runner": "npm run build && tsx test/Runner/index.test.ts",
    "test:silent": "npm run build && tsx test/Silent/index.test.ts",
    "test:quick": "tsx test/self.test.ts",
    "test:legacy": "tsx test/battle.test.ts",
    "test:cli": "node dist/cli.js test",
    "doc": "node script/generate-docs.js",
    "docs": "node script/generate-docs.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "test",
    "testing",
    "terminal",
    "tui",
    "pty",
    "cli",
    "screenshot",
    "integration"
  ],
  "author": "AKAO.IO",
  "license": "MIT",
  "dependencies": {
    "@akaoio/ruspty": "^3.5.5",
    "chalk": "^4.1.2",
    "terminal-kit": "^3.0.0",
    "yargs": "^17.7.2"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@akaoio/composer": "^0.2.3",
    "@types/node": "^20.19.11",
    "@types/terminal-kit": "^2.5.6",
    "@types/yargs": "^17.0.24",
    "prettier": "^3.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
